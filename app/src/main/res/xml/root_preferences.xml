<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/chat_header">

        <EditTextPreference
            app:key="chat_username"
            app:title="@string/username_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="chat_color_self"
            app:title="@string/chat_color_self"
            app:singleLineTitle="false"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="chat_color_other"
            app:title="@string/chat_color_other"
            app:singleLineTitle="false"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="chat_logout"
            app:title="@string/nav_logout"
            app:singleLineTitle="false"
            app:defaultValue="false" />



    </PreferenceCategory>

    <PreferenceCategory app:title="@string/cache_header">

        <SwitchPreferenceCompat
            app:key="offline_mode"
            app:title="@string/cache_storage_title" />

        <SwitchPreferenceCompat
            app:key="reload_music"
            app:title="@string/reload_music"
            app:singleLineTitle="false" />

    </PreferenceCategory>

</PreferenceScreen>